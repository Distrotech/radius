option {
	max-requests 1024;
	exec-program-user "@USER@";	
};

logging {
	channel default {
		file "radius.log";
		print-level yes;
		print-category yes;
	};
	channel debug {
		file "radius.debug";
	};
	category auth {
		channel default;
		print-auth yes;
		print-failed-pass yes;
	};
	category debug {
		channel debug;
		level acct=1,"radius.c",proxy=100;
	};
	category !debug {
		channel default;
	};
};

auth {
	port @PROXY_AUTH_PORT@;
	max-requests 127;
	request-cleanup-delay 2;
	detail yes;
	strip-names yes;
	checkrad-assume-logged yes;
};

acct {
	port @PROXY_ACCT_PORT@;
	max-requests 127;
	request-cleanup-delay 2;
};

proxy {
	max-requests 127;
	request-cleanup-delay 2;
};

@GUILE@guile {
@GUILE@        debug yes;
@GUILE@        load-path "@BUILDDIR@/test/raddb";
@GUILE@        load "auth.scm";
@GUILE@        load "acct.scm";
@GUILE@};
