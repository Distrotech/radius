(define radius-acct-file "@BUILDDIR@/test/acct/scheme")

(define (acct req)
  (call-with-output-file radius-acct-file
    (lambda (port)
      (for-each (lambda (pair)
		  (display (car pair) port)
		  (display "=" port)
		  (display (cdr pair) port)
		  (newline port))
		req)
      (newline port)))
  #t)
