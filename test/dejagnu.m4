changequote([,])
define([_SUITEDIR],[dejagnu])
define([_HEADER],[# This file is automatically generated. Please, do not edit
# Source: $1:$2])

dnl ***
dnl TOOLDIR(NAME, START-ARG, SEQ...)
define([TOOLDIR],[define([_TOOLDIR],$1)
define([_SEQ_NUM],0)
if ! test -d BUILDDIR/test/_SUITEDIR/$1; then mkdir BUILDDIR/test/_SUITEDIR/$1; fi])
dnl ***

define([BEGIN],[SEQUENCE(Start,,default_radiusd_start $1)])

define([END],[SEQUENCE(Stop,,radius_exit)])

dnl ***
dnl FILENAME(NAME)
define([FILENAME],[format(%s/test/%s/%s/%03d%s.exp,BUILDDIR,_SUITEDIR,_TOOLDIR,_SEQ_NUM,$1)])

dnl ***
dnl SEQUENCE(NAME,COMMENT,tests...)
define([SEQUENCE],[define([_SEQ_NUM],incr(_SEQ_NUM))
cat > FILENAME($1) <<'EOF'
_HEADER(__file__,__line__)
clone_output "[$2]"
$3
EOF[]dnl])

dnl ***
dnl IFSEQUENCE(NAME,CAPA,COMMENT,tests...)
define([IFSEQUENCE],[define([_SEQ_NUM],incr(_SEQ_NUM))
cat > FILENAME($1) <<'EOF'
_HEADER(__file__,__line__)
default_radiusd_version
if { [[info exists CAPABILITY($2)]] } {
   $4
} else {
   unsupported "$3"
}
EOF[]dnl])

dnl ***
define([QUOTE],[patsubst([$1],["],[\\"])])

dnl ***
dnl TEST(SEND,EXPECT,[PATTERN])
define([TEST],[radius_test "QUOTE([$1])" "QUOTE([$2])" ifelse($#,3,["QUOTE([$3])"])])

dnl ***
dnl DISPLAY(TEXT)
define([DISPLAY],[clone_output "$1"])
divert[]dnl
