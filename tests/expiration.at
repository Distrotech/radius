AT_SETUP([Expiration attribute])
AT_KEYWORDS([expiration])

RA_CHECK([send auth Access-Request User-Name = "expire" \
              User-Password = "expire" 
          expect Access-Reject Reply-Message = "Password has expired\r\n"])

RA_CHECK([send auth Access-Request User-Name = "no-expire" \
             User-Password = "expire" 
          expect Access-Accept])

AT_CLEANUP

