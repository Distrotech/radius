option {
	usr2delay 30;
	max-requests 1024;
};

logging {
	channel info {
		file "radius.info";
		option pid;
	};	
	channel debug {
		file "radius.debug";
	};
	category auth {
		level auth,failed_pass;
	};
	category info {
		channel info;
	};
	category debug {
		channel debug;
	};
};

