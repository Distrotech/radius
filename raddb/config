option {
	usr2delay 30;
	max-requests 1024;
	# Uncomment and edit these if you need to:
#	log-dir "/var/log";
#	acct-dir "/var/acct";
};

logging {
	channel info {
		file "radius.info";
		print-pid yes;
	};	
	channel debug {
		file "radius.debug";
	};
	category auth {
		print-auth yes;
		print-failed-pass yes;
	};
	category info {
		channel info;
	};
	category debug {
		channel debug;
	};
};

auth {
	max-requests 127;
	request-cleanup-delay 2;
	detail yes;
	strip-names yes;
	checkrad-assume-logged yes;
};

acct {
	max-requests 127;
	request-cleanup-delay 2;
};

proxy {
	max-requests 127;
	request-cleanup-delay 2;
};

#usedbm no;

#notify off;
